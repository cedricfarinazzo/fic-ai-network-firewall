   "source": [
    "import itertools\n",
    "import numpy as np\n",
    "\n",
    "def fromiter2d(it, dtype, size):\n",
    "    flattened = itertools.chain.from_iterable(it)\n",
    "    array_1d = np.fromiter(flattened, dtype)\n",
    "    array_2d = np.reshape(array_1d, (size, -1))\n",
    "    return array_2d"
   ]
